{
  "version": "1.2.1-beta",
  "name": "@pleasure-js/docs",
  "description": "Better docs for software dev",
  "author": "Martin Rafael <tin@devtin.io>",
  "main": "dist/docs.js",
  "module": "dist/docs.esm.js",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:live": "nodemon -w src --exec yarn build",
    "build:docs": "jsdoc2md --template DOCS.hbs --files dist/pleasure-docs.js > DOCS.md",
    "build:readme": "node scripts/build-readme.js",
    "lint": "standard --ext .js --ignore-path .gitignore src/",
    "test": "ava --serial --verbose"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "ava": "^3.10.1",
    "esm": "^3.2.25",
    "jsdoc": "^3.6.4",
    "jsdoc-vuejs": "^3.0.8",
    "nodemon": "^2.0.4",
    "rollup": "^2.21.0",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-ava-test-example": "^1.0.4",
    "rollup-plugin-babel-minify": "^10.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "standard": "^14.3.4"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "dmd": "^5.0.2",
    "dmd-clean": "^0.1.1",
    "dmd-clear": "^0.1.2",
    "dmd-readable": "^1.2.2",
    "fs-extra": "^9.0.1",
    "gherkin": "5.0.0",
    "inquirer": "^7.3.1",
    "jsdoc-api": "^6.0.0",
    "jsdoc-to-markdown": "^6.0.1",
    "lodash": "^4.17.19",
    "pkg-up": "^3.1.0"
  },
  "ava": {
    "babel": true,
    "files": [
      "test/**/*.test.js",
      "src/**/*.unit.js"
    ],
    "require": [
      "esm",
      "./test/utils/setup.js"
    ],
    "snapshotDir": "test/snapshots"
  },
  "standard": {
    "globals": [
      "fixture",
      "fixtureRaw",
      "benchmark",
      "benchmarkRaw"
    ]
  }
}
