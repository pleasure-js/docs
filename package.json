{
  "name": "@pleasure-js/docs",
  "description": "Better docs for software dev",
  "author": "Martin Rafael <tin@devtin.io>",
  "version": "1.0.1-beta",
  "main": "dist/docs.js",
  "module": "dist/docs.esm.js",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:live": "nodemon -w src --exec yarn build",
    "build:docs": "jsdoc2md --template DOCS.hbs --files dist/pleasure-docs.js > DOCS.md",
    "build:readme": "node scripts/build-readme.js",
    "test": "ava --serial --verbose"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "jsdoc": "^3.6.3",
    "nodemon": "^2.0.2",
    "rollup": "^1.29.0",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-babel-minify": "^9.1.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "dmd": "^5.0.0",
    "dmd-readable": "^1.1.1",
    "dmd-clean": "^0.1.1",
    "dmd-clear": "^0.1.2",
    "gherkin": "5.0.0",
    "inquirer": "^7.0.3",
    "jsdoc-api": "^5.0.4",
    "jsdoc-to-markdown": "^5.0.3",
    "lodash": "^4.17.15"
  }
}
